<Page x:Class="QuizClient.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LobbyPage"
      Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <Border Style="{StaticResource CardStyle}" Width="350">
                <StackPanel>

                    <!-- Titolo -->
                    <TextBlock 
                               Style="{StaticResource PageTitle}"
                               TextAlignment="Center"
                               x:Name="TitoloTextBox"/>

                    <!-- Spaziatura -->
                    <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                        <!-- Aggiunto SQ -->
                        <Button x:Name="QuizButton" 
                                Content="Crea quiz"
                                Height="40"
                                Click="CreateQuiz_Click"/>

                        <Button Content="Gestisci categorie"
                                x:Name="GestisciCategorieButton"
                                Height="40"
                                Click="ManageCategories_Click"/>
                        
                        <!-- Aggiunto SQ -->
                        <Button Content="Gestisci quesiti" 
                                x:Name="GestisciQuesitiButton" 
                                Height="40" 
                                Click="ManageQuestions_Click"/>

                        <Button Content="Statistiche profilo"
                                Height="40"
                                Click="ProfileStats_Click"/>

                        <Button Content="Logout"
                                Height="40"
                                Background="#D13438"
                                Foreground="White"
                                Click="Logout_Click"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
