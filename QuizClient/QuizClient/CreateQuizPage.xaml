<Page x:Class="QuizClient.CreateQuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Crea Quiz"
      Background="{StaticResource AppBackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <Border Style="{StaticResource CardStyle}" Width="450">
                <StackPanel>

                    <!-- Titolo -->
                    <TextBlock x:Name="TitleTextBlock" Text="Crea quiz" Style="{StaticResource PageTitle}" TextAlignment="Center" />

                    <!-- Descrizione -->
                    <TextBlock x:Name="DescriptionTextBlock" Text ="Compila i campi per generare un nuovo quiz:"
                               Style="{StaticResource SectionTitle}"
                               FontSize="14"
                               Margin="0,0,0,20"/>

                    <!-- AI Generated -->
                    <TextBlock x:Name="AITextBlock" Text="Vuoi che il quiz sia generato dall'AI?"
                               Style="{StaticResource SectionTitle}" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton x:Name="AIGeneratedYes" Content="Sì" GroupName="AIGenerated"
                                     Margin="0,0,20,0"
                                     Checked="AIGenerated_Checked"/>
                        <RadioButton x:Name="AIGeneratedNo" Content="No" GroupName="AIGenerated"
                                     IsChecked="True"
                                     Checked="AIGenerated_Checked"/>
                    </StackPanel>

                    <!-- Selezione categorie (manuale) -->
                    <TextBlock x:Name="CategorieSelezionateLabel"
                               Text="Categorie selezionate"
                               Style="{StaticResource SectionTitle}"
                               Visibility="Visible"/>
                    <DockPanel Margin="0,0,0,10">
                        <TextBox x:Name="CategoryBox" IsReadOnly="True"
                                 Width="220"
                                 Visibility="Visible"/>
                        <Button Content="Scegli"
                                Width="110"
                                Margin="5,0,0,0"
                                Click="ApriSelezioneCategorie_Click"
                                Visibility="Visible"/>
                    </DockPanel>

                    <!-- Categoria AI -->
                    <StackPanel Visibility="Collapsed" x:Name="AICategoryPanel">
                        <TextBlock x:Name="AICategoryText"
                                   Text="Inserisci categoria"
                                   Style="{StaticResource SectionTitle}" />
                        <TextBox x:Name="AICategoryBox" Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Numero di domande -->
                    <TextBlock Text="Numero di domande"
                               Style="{StaticResource SectionTitle}" />
                    <TextBox x:Name="NumQuestionsBox" Margin="0,0,0,10"/>

                    <!-- Difficoltà -->
                    <TextBlock Text="Difficoltà"
                               Style="{StaticResource SectionTitle}" />
                    <ComboBox x:Name="DifficultyBox" Margin="0,0,0,10">
                        <ComboBoxItem Content="Facile"/>
                        <ComboBoxItem Content="Intermedia"/>
                        <ComboBoxItem Content="Difficile"/>
                        <ComboBoxItem Content="Qualsiasi"/>
                    </ComboBox>

                    <!-- Username docente (opzionale, attualmente commentato) -->
                    <!--
                    <StackPanel x:Name="UsernameDocentePanel" Visibility="Collapsed">
                        <TextBlock Text="Username docente"
                                   Style="{StaticResource SectionTitle}" />
                        <TextBox x:Name="UsernameDocenteBox" Margin="0,0,0,10"/>
                    </StackPanel>
                    -->

                    <!-- Pulsanti finali -->
                    <Button x:Name="CreaButton" Content="Crea Quiz" Click="CreateQuiz_Click" Height="40" Margin="7,20,7,10"/>
                    <Button Content="Indietro" Click="Back_Click" Height="40"/>

                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
