<Page x:Class="QuizClient.CreateQuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CreateQuizPage">
    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320" Margin="40">
            <TextBlock x:Name="TitleTextBlock" Text="" FontSize="24" Margin="0,0,0,20" />
            <TextBlock x:Name="DescriptionTextBlock" Text="" Margin="0,0,0,20" />

            <!-- AI Generated -->
            <TextBlock x:Name="AITextBlock" Text="" TextWrapping="Wrap" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton x:Name="AIGeneratedYes" Content="Sì" GroupName="AIGenerated" IsChecked="False" Checked="AIGenerated_Checked"/>
                <RadioButton x:Name="AIGeneratedNo" Content="No" GroupName="AIGenerated" IsChecked="True" Margin="20,0,0,0" Checked="AIGenerated_Checked"/>
            </StackPanel>

            <!-- Categorie -->
            <TextBlock x:Name="CategorieSelezionateLabel" Text="Categorie selezionate" Visibility="Visible" />
            <DockPanel Margin="0,0,0,10">
                <!-- TextBox e Bottone visibili solo se NON AI -->
                <TextBox x:Name="CategoryBox" IsReadOnly="True" Width="220" Visibility="Visible"/>
                <Button Content="Scegli" Width="80" Margin="5,0,0,0" Click="ApriSelezioneCategorie_Click" Visibility="Visible"/>
            </DockPanel>
            
            <!-- TextBlock visibile solo se AI -->
            <StackPanel Visibility="Collapsed" x:Name="AICategoryPanel">
                <TextBlock x:Name="AICategoryText" Text="Inserisci categoria"/>
                <TextBox x:Name="AICategoryBox" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Quantità -->
            <TextBlock Text="Numero di domande" />
            <TextBox x:Name="NumQuestionsBox" Margin="0,0,0,10" />

            <!-- Difficoltà -->
            <TextBlock Text="Difficoltà" />
            <ComboBox x:Name="DifficultyBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Facile"/>
                <ComboBoxItem Content="Intermedia"/>
                <ComboBoxItem Content="Difficile"/>
                <ComboBoxItem Content="Qualsiasi"/>
            </ComboBox>

            <!-- Username docente -->
            <!--<StackPanel x:Name="UsernameDocentePanel" Visibility="Collapsed">
                <TextBlock Text="Username docente" />
                <TextBox x:Name="UsernameDocenteBox" Margin="0,0,0,10"/>
            </StackPanel>-->

            <Button x:Name="CreaButton" Content="" Click="CreateQuiz_Click" Margin="0,20,0,10"/>
            <Button Content="Indietro" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>