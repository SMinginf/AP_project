<Page x:Class="QuizClient.CategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:QuizClient"
      xmlns:utils="clr-namespace:QuizClient.Utils"
      Title="CategoriesPage">

    <Page.Resources>
        <utils:PubblicaToStringConverter x:Key="PubblicaToStringConverter"/>
    </Page.Resources>

    <Grid Background="{StaticResource AppBackgroundBrush}" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Text="Gestione Categorie"
                   Style="{StaticResource PageTitle}"
                   Grid.Row="0"/>

        <!-- Filtro e Ricerca -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,20" HorizontalAlignment="Left">
            <TextBlock Text="Cerca:"
                       Style="{StaticResource SectionTitle}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="SearchBox"
                     Width="250"
                     Height="30"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchBox_TextChanged"
                     Margin="0,0,20,0"
                     ToolTip="Digita il nome della categoria"/>

            <CheckBox x:Name="FiltroPubbliche"
                      Content="Solo pubbliche"
                      FontSize="13"
                      VerticalAlignment="Center"
                      Margin="0,0,20,0"
                      Checked="FiltroPubblica_Checked"
                      Unchecked="Filtri_Unchecked"/>

            <CheckBox x:Name="FiltroPrivate"
                      Content="Solo private"
                      FontSize="13"
                      VerticalAlignment="Center"
                      Checked="FiltroPrivata_Checked"
                      Unchecked="Filtri_Unchecked"/>
        </StackPanel>

        <!-- Elenco Categorie in stile Card -->
        <!-- Lista Categorie wrappata in una card -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <ListView x:Name="CategoryListView"
              BorderThickness="0"
              Background="Transparent"
              SelectionMode="Single"
              MouseDoubleClick="CategoryListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <!-- Colonna Checkbox -->
                        <GridViewColumn Header="✓" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Selezionata}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Colonna Nome -->
                        <GridViewColumn Header="Nome" Width="180">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Nome}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Colonna Tipo -->
                        <GridViewColumn Header="Tipo" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Tipo}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Colonna Descrizione con trimming -->
                        <GridViewColumn Header="Descrizione" Width="220">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Descrizione}"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"
                                       MaxWidth="300"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Colonna Visibilità -->
                        <GridViewColumn Header="Visibilità" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Pubblica, Converter={StaticResource PubblicaToStringConverter}}" 
                                       VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>


        <!-- Pulsanti -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="⬅ Indietro"
                    Width="110"
                    Height="35"
                    Click="Back_Click"/>

            <Button Content="➕ Nuova"
                    Width="110"
                    Height="35"
                    Click="NuovaCategoria_Click"/>

            <Button Content="🗑 Elimina"
                    Width="110"
                    Height="35"
                    Click="EliminaCategorie_Click"/>
        </StackPanel>
    </Grid>
</Page>
