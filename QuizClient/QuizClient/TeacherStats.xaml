<Page x:Class="QuizClient.TeacherStats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:oxy="http://oxyplot.org/wpf"
      xmlns:local="clr-namespace:QuizClient"
      xmlns:utils="clr-namespace:QuizClient.Utils"
      Unloaded="Page_Unloaded"

      mc:Ignorable="d"
      Title="TeacherStats">


    <Grid Background="{StaticResource AppBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Menu laterale -->
        <Border Background="{StaticResource CardBackgroundBrush}" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="Menù" Style="{StaticResource SectionTitle}"/>
                <Separator Margin="0,0,0,10"/>
                <Button Content="Account" Click="InfoButton_Click" />
                <Button Content="Statistiche generali" Click="GeneralStatsButton_Click" />
                <Button Click="StatsPerCategoryButton_Click">
                    <TextBlock Text="Statistiche per categoria" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Content="Indietro" Click="BackButton_Click" />
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Auto">
        <!-- Contenuto principale -->
            <StackPanel Grid.Column="1" Margin="10">
                <!-- Info Panel -->
                <Border x:Name="InfoPanel" Style="{StaticResource CardStyle}" Visibility="Visible">
                    <StackPanel>
                        <TextBlock Text="Informazioni Docente" Style="{StaticResource PageTitle}"/>
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Nome:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock x:Name="NameText" Grid.Row="0" Grid.Column="1" />
                            <TextBlock Text="Cognome:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock x:Name="CognomeText" Grid.Row="1" Grid.Column="1" />
                            <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock x:Name="EmailText" Grid.Row="2" Grid.Column="1" />
                            <TextBlock Text="Username:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock x:Name="UsernameText" Grid.Row="3" Grid.Column="1" />
                            <TextBlock Text="Data di Nascita:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock x:Name="BirthDateText" Grid.Row="4" Grid.Column="1" />
                            <TextBlock Text="Genere:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,0" />
                            <TextBlock x:Name="GenderText" Grid.Row="5" Grid.Column="1" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- General Stats Panel -->
                <Border x:Name="GeneralStatsPanel" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Statistiche Generali" Style="{StaticResource PageTitle}" />

                            <WrapPanel HorizontalAlignment="Center" ItemWidth="160" Margin="20" ItemHeight="Auto">
                                <utils:StatCard Title="Quesiti inseriti" Value="{Binding NumQuesitiInseriti}" Icon="📘"/>
                                <utils:StatCard Title="Quesiti affrontati" Value="{Binding NumQuesitiAffrontati}" Icon="📘"/>
                                <utils:StatCard Title="Studenti coinvolti" Value="{Binding NumUtenti}" Icon="👤"/>
                                <utils:StatCard Title="Durata media quiz" Value="{Binding DurataMediaQuiz}" Icon="⏱️"/>
                            </WrapPanel>
                            <oxy:PlotView x:Name="TeacherGeneralStatsBarChart" Height="300" />
                        </StackPanel>
                </Border>

                <!-- Stats per categoria Panel -->
                <Border x:Name="StatsPanel" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Statistiche per categoria" Style="{StaticResource PageTitle}"/>
                        <TextBlock Text="Seleziona una o più categorie per visualizzare le relative statistiche." Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="SelectedCategoriesBox" IsReadOnly="True" Width="220"/>
                            <Button Content="Scegli categorie" Width="120" Margin="8,0,0,0" Click="ChooseCategories_Click"/>
                        </StackPanel>

                        <StackPanel>
                            <StackPanel x:Name="QuizEQuesitiTotaliPanel" Margin="0,0,0,15">
                                <TextBlock x:Name="QuizUniciText" FontSize="14" Margin="0,0,0,2"/>
                                <TextBlock x:Name="QuesitiTotaliText" FontSize="14"/>
                            </StackPanel>

                            <oxy:PlotView x:Name="StatsPerDifficoltaChart" Height="300" Margin="0,0,0,20"/>
                            
                            <TextBlock x:Name="ClassificaTitleText" Text="Classifica Top 10 Studenti" Style="{StaticResource SectionTitle}" Margin="0,20,0,5" Visibility="Collapsed"/>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                <ListView x:Name="Top10StudentiListView"  Margin="0,10,0,0" Height="300" Visibility="Collapsed">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="#" DisplayMemberBinding="{Binding Posizione}" Width="30"/>
                                            <GridViewColumn Header="Username" DisplayMemberBinding="{Binding StudenteUsername}" Width="100"/>
                                            <GridViewColumn Header="Corrette" DisplayMemberBinding="{Binding Corrette}" Width="70"/>
                                            <GridViewColumn Header="Sbagliate" DisplayMemberBinding="{Binding Sbagliate}" Width="70"/>
                                            <GridViewColumn Header="Non date" DisplayMemberBinding="{Binding NonDate}" Width="70"/>
                                            <GridViewColumn Header="Totale" DisplayMemberBinding="{Binding TotRisposte}" Width="70"/>
                                            <GridViewColumn Header="% Corrette" DisplayMemberBinding="{Binding PercCorrette}" Width="80"/>
                                            <GridViewColumn Header="% Sbagliate" DisplayMemberBinding="{Binding PercSbagliate}" Width="80"/>
                                            <GridViewColumn Header="% Non date" DisplayMemberBinding="{Binding PercNonDate}" Width="80"/>
                                            <!--<GridViewColumn Header="Punteggio" DisplayMemberBinding="{Binding Punteggio}" Width="80"/> -->
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </ScrollViewer>

                            <Border x:Name="QuesitiSpeciali" Style="{StaticResource CardStyle}" Visibility="Collapsed" RenderTransformOrigin="0.943,-0.21" >
                                <Grid Margin="10" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <utils:StatCard  Grid.Column="0" Title="Quesito migliore" Icon="✅" Width="200">
                                        <utils:StatCard.Description>
                                            <StackPanel>
                                                <TextBlock Text="{Binding QuesitoPiuIndovinato.QuesitoTesto}" TextWrapping="Wrap" FontSize="12" FontWeight="Bold"/>


                                                <TextBlock FontSize="11">
                                                    <Run Text="Difficoltà: " />
                                                    <Run Text="{Binding QuesitoPiuIndovinato.Difficolta}" />
                                                </TextBlock>

                                                <TextBlock FontSize="11">
                                                        <Run Text="Corrette: " />
                                                        <Run Text="{Binding QuesitoPiuIndovinato.Corrette}" />
                                                        <Run Text=" ("/>
                                                        <Run Text="{Binding QuesitoPiuIndovinato.PercCorrette}" />
                                                        <Run Text="%)" />
                                                </TextBlock>

                                                <TextBlock FontSize="11">
                                                        <Run Text="Sbagliate: " />
                                                        <Run Text="{Binding QuesitoPiuIndovinato.Sbagliate}" />
                                                        <Run Text=" ("/>
                                                        <Run Text="{Binding QuesitoPiuIndovinato.PercSbagliate}" />
                                                        <Run Text="%)" />
                                                </TextBlock>

                                                <TextBlock FontSize="11">
                                                        <Run Text="Non date: " />
                                                        <Run Text="{Binding QuesitoPiuIndovinato.NonDate}" />
                                                        <Run Text=" ("/>
                                                        <Run Text="{Binding QuesitoPiuIndovinato.PercNonDate}" />
                                                        <Run Text="%)" />
                                                </TextBlock>

                                            </StackPanel>
                                        </utils:StatCard.Description>
                                    </utils:StatCard>


                                    <utils:StatCard Grid.Column="1" Title="Quesito peggiore" Icon="❌" Width="200">
                                        <utils:StatCard.Description>
                                            <StackPanel>
                                                <TextBlock Text="{Binding QuesitoPiuSbagliato.QuesitoTesto}" TextWrapping="Wrap" FontSize="12" FontWeight="Bold"/>
                                                
                                                <TextBlock FontSize="11">
                                                        <Run Text="Difficoltà: " />
                                                        <Run Text="{Binding QuesitoPiuSbagliato.Difficolta}" /> 
                                                </TextBlock>
                                                
                                                <TextBlock FontSize="11">
                                                        <Run Text="Corrette: " />
                                                        <Run Text="{Binding QuesitoPiuSbagliato.Corrette}" />
                                                        <Run Text=" ("/>
                                                        <Run Text="{Binding QuesitoPiuSbagliato.PercCorrette}" />
                                                        <Run Text="%)" />
                                                </TextBlock>
                                                
                                                <TextBlock FontSize="11">
                                                        <Run Text="Sbagliate: " />
                                                        <Run Text="{Binding QuesitoPiuSbagliato.Sbagliate}" />
                                                        <Run Text=" ("/>
                                                        <Run Text="{Binding QuesitoPiuSbagliato.PercSbagliate}" />
                                                        <Run Text="%)" />
                                                    </TextBlock>

                                                    <TextBlock FontSize="11">
                                                        <Run Text="Non date: " />
                                                        <Run Text="{Binding QuesitoPiuSbagliato.NonDate}" />
                                                        <Run Text=" ("/>
                                                        <Run Text="{Binding QuesitoPiuSbagliato.PercNonDate}" />
                                                        <Run Text="%)" />
                                                    </TextBlock>
                                                </StackPanel>
                                        </utils:StatCard.Description>
                                    </utils:StatCard>
                                </Grid>
                            </Border>
                            
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
