<UserControl x:Class="QuizClient.Utils.StatCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             Width="160" Height="Auto">
    <Border Background="#FFF" CornerRadius="12" Padding="10" Margin="5" >
        <StackPanel>
            <TextBlock Text="{Binding Icon, ElementName=Root}" FontSize="26" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Title, ElementName=Root}" FontWeight="SemiBold" FontSize="14" TextAlignment="Center"/>
            <TextBlock Text="{Binding Value, ElementName=Root}" FontWeight="Bold" FontSize="20" Foreground="SteelBlue" TextAlignment="Center"/>

            <!-- Descrizione opzionale -->
            <ContentPresenter Content="{Binding Description, ElementName=Root}" Margin="5,10,5,0"/>
        </StackPanel>
    </Border>
</UserControl>
