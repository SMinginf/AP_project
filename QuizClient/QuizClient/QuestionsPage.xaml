<Page x:Class="QuizClient.QuestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizClient"
      xmlns:utils="clr-namespace:QuizClient.Utils"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestionsPage">

    <Page.Resources>
        <utils:CategoriaToStringConverter x:Key="CategoriaToStringConverter"/>
    </Page.Resources>

    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="41.923"/>
            <RowDefinition Height="Auto" MinHeight="28"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" MinHeight="52"/>
        </Grid.RowDefinitions>

        <!-- 📘 Titolo -->
        <TextBlock Text="Gestione Quesiti" FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="2,0,0,10"/>

        <!-- 🔍 Campo di ricerca -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Cerca testo:" VerticalAlignment="Center" Margin="2,0,10,0"/>
            <TextBox x:Name="SearchBox"
                     Margin="2,0,280,0"
                     Width="250"
                     TextChanged="SearchBox_TextChanged"
                     ToolTip="Cerca parole chiave"/>
            <Label Content="Carica quesiti da file:" VerticalAlignment="Center" Margin="0,0,0,0"/>
            <Button Content="..." Width="30" Height="20" Margin="2,0,0,0" VerticalAlignment="Center" Click="CaricaDaFile_Click"/>
        </StackPanel>

        <!-- 📋 Elenco Quesiti -->
        <DataGrid x:Name="QuesitiGrid"
              Grid.Row="2"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              Margin="4,0,4,0"
              MinHeight="200"
              MouseDoubleClick="QuesitiGrid_MouseDoubleClick"
              SelectionMode="Single" 
              Height="220" 
              VerticalAlignment="Center">

            <DataGrid.Resources>
                <!-- Celle senza evidenziazione quando selezionate -->
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="LightGray"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <!-- Righe senza sfondo selezione -->
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="LightGray"/>

                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFF5F5F5"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="35">
                    <DataGridTemplateColumn.Header>
                        <CheckBox Click="SelezionaTutteLeCheckbox_Click"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Selezionato, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Difficoltà" Binding="{Binding Difficolta}" Width="*"/>
                <DataGridTemplateColumn Header="Testo" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Testo}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center" Height="22"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Categorie" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Categorie, Converter={StaticResource CategoriaToStringConverter}}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center" Height="22"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 🔘 Pulsanti -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Width="770" Height="42" VerticalAlignment="Bottom">
            <Button Content="⬅️ Indietro" Width="100" Margin="4,5,445,5" Click="Back_Click" Height="32"/>
            <Button Content="➕ Nuovo" Width="100" Margin="5" HorizontalAlignment="Right" Click="NuovoQuesito_Click"/>
            <Button Content="🗑️ Elimina" Width="100" Margin="5" Click="EliminaQuesito_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Page>