<Page x:Class="QuizClient.QuestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizClient"
      xmlns:utils="clr-namespace:QuizClient.Utils"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestionsPage"
      Unloaded="Page_Unloaded"
      Background="{StaticResource AppBackgroundBrush}">

    <Page.Resources>
        <utils:CategoriaToStringConverter x:Key="CategoriaToStringConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titolo -->
            <RowDefinition Height="Auto"/>
            <!-- Ricerca -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsanti -->
        </Grid.RowDefinitions>

        <!-- 📘 Titolo -->
        <TextBlock Text="Gestione Quesiti"
                   Style="{StaticResource PageTitle}"
                   Grid.Row="0"/>

        <!-- 🔍 Barra di ricerca -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Cerca testo:"
                       Style="{StaticResource SectionTitle}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <TextBox x:Name="SearchBox"
                     Width="250"
                     Margin="0,0,20,0"
                     TextChanged="SearchBox_TextChanged"
                     ToolTip="Cerca parole chiave"/>
            <TextBlock Text="Carica quesiti da file:"
                       Style="{StaticResource SectionTitle}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <Button Content="Sfoglia..."
                    Width="90"
                    Click="CaricaDaFile_Click"/>
        </StackPanel>

        <!-- 📋 Lista Quesiti -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <ListView x:Name="QuesitiListView"
                      SelectionMode="Single"
                      MouseDoubleClick="QuesitiListView_MouseDoubleClick">

                <ListView.View>
                    <GridView>
                        <!-- Colonna Checkbox -->
                        <GridViewColumn Header="✓" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Selezionato}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Difficoltà -->
                        <GridViewColumn Header="Difficoltà" Width="120"
                                        DisplayMemberBinding="{Binding Difficolta}"/>

                        <!-- Testo -->
                        <GridViewColumn Header="Testo" Width="320">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Testo}"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Categorie -->
                        <GridViewColumn Header="Categorie" Width="250">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Categorie, Converter={StaticResource CategoriaToStringConverter}}"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- 🔘 Pulsanti -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Indietro"
                    Width="100"
                    Click="Back_Click"/>
            <Button Content="Nuovo"
                    Width="100"
                    Click="NuovoQuesito_Click"/>
            <Button Content="Elimina"
                    Width="100"
                    Click="EliminaQuesito_Click"/>
        </StackPanel>
    </Grid>
</Page>
