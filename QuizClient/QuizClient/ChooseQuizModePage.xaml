<Page x:Class="QuizClient.ChooseQuizModePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ChooseQuizModePage">

    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Componi il tuo Quiz!" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,1"/>
            <TextBlock TextWrapping="Wrap" FontSize="12" Margin="0,5,0,0" Height="54">
                <Run Text="Manuale: componi il tuo quiz scegliendo i quesiti ad uno ad uno!"/>
                <LineBreak/>
                <Run Text="Random: lascia comporre il quiz direttamente a me!"/> 
                <LineBreak/> 
                <Run Text="Scegliendo quale tipo di quesito dovrÃ  popolare il quiz (Area quesiti o AI)."/>
                <LineBreak/>
            </TextBlock>
            <TextBlock>
            <Run Text="NOTA: potrai sostituire tutti o alcuni dei quesiti in ogni momento o"/>
            <LineBreak/>
            <Run Text="random dalla tua area quesiti o con quesiti AI!"/>
            <LineBreak/>
            </TextBlock>

            <Button Content="Manuale" Width="200" Height="40" Click="ManualeButton_Click"/>
            <Button Content="Random" Width="200" Height="40" Margin="0,0,0,10" Click="RandomButton_Click"/>
            <Button Content="Indietro" Width="100" Height="20" Margin="0,0,0,10" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
