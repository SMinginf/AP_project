<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="QuizClient.ChooseQuizModePage"
      Title="ChooseQuizModePage" av:DesignHeight="515.305" av:DesignWidth="527.585">

    <Grid Background="{StaticResource AppBackgroundBrush}" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Text="Componi il tuo Quiz!"
                   Style="{StaticResource PageTitle}"
                   Grid.Row="0"
                   HorizontalAlignment="Center"/>

        <!-- Card descrizione + opzioni -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="600">
            <StackPanel>
                <!-- Sottotitolo -->
                <TextBlock Text="Scegli la modalità di creazione del quiz"
                           Style="{StaticResource SectionTitle}"
                           HorizontalAlignment="Center"/>

                <!-- Testo descrittivo -->
                <TextBlock TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,5,0,10"><Run Text="Manuale: componi il tuo quiz scegliendo i quesiti ad uno ad uno."/><LineBreak/><Run Text="Random: lascia comporre il quiz direttamente al sistema,"/><LineBreak/><Run Text="scegliendo da area quesiti o AI."/></TextBlock>

                <TextBlock TextWrapping="Wrap"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,15"><Run Text="NOTA: potrai sostituire tutti o alcuni quesiti in qualsiasi momento,"/><LineBreak/><Run Text="sia random dalla tua area quesiti che tramite AI."/></TextBlock>

                <!-- Pulsanti modalità -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Button Content="Manuale"
                            Width="200"
                            Height="40"
                            Margin="0,0,0,10"
                            Click="ManualeButton_Click"/>

                    <Button Content="Random"
                            Width="200"
                            Height="40"
                            Margin="0,0,0,10"
                            Click="RandomButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Pulsante Indietro -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="⬅ Indietro"
                    Width="120"
                    Height="35"
                    Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
