<Page x:Class="QuizClient.StudentStats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
      Title="StudentStats"
      Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu laterale -->
        <Border Grid.Column="0" BorderBrush="#CCC" BorderThickness="0,0,1,0" Background="White">
            <Border Background="{StaticResource CardBackgroundBrush}" 
        BorderBrush="#CCC"
        BorderThickness="1"
        Margin="0"
        Padding="10"
        SnapsToDevicePixels="True">

                <StackPanel>
                    <TextBlock Text="Menù"
                       Style="{StaticResource SectionTitle}"/>

                    <Separator Margin="0,0,0,10"/>
                    <Button Content="Account" Click="InfoButton_Click"/>
                    <Button Content="Statistiche generali" Click="GeneralStatsButton_Click"/>
                    <Button Click="StatsPerCategoryButton_Click">
                        <TextBlock Text="Statistiche per categoria" TextWrapping="Wrap" TextAlignment="Center"/>
                    </Button>
                    <Button Content="Indietro" Click="BackButton_Click"/>
                </StackPanel>
            </Border>

        </Border>

        <!-- Contenuto principale -->
        <ScrollViewer Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Column="1" Margin="10">

                <!-- Informazioni personali -->
                <Border x:Name="InfoPanel" Visibility="Visible" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Informazioni Studente" Style="{StaticResource PageTitle}" />
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Nome:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" FontSize="14" />
                            <TextBlock x:Name="NameText" Grid.Row="0" Grid.Column="1" FontSize="14"/>

                            <TextBlock Text="Cognome:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" FontSize="14" />
                            <TextBlock x:Name="CognomeText" Grid.Row="1" Grid.Column="1" FontSize="14" />

                            <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" FontSize="14" />
                            <TextBlock x:Name="EmailText" Grid.Row="2" Grid.Column="1" FontSize="14" />

                            <TextBlock Text="Username:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" FontSize="14" />
                            <TextBlock x:Name="UsernameText" Grid.Row="3" Grid.Column="1" FontSize="14" />

                            <TextBlock Text="Data di Nascita:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5" FontSize="14" />
                            <TextBlock x:Name="BirthDateText" Grid.Row="4" Grid.Column="1" FontSize="14" />

                            <TextBlock Text="Genere:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,0" FontSize="14"/>
                            <TextBlock x:Name="GenderText" Grid.Row="5" Grid.Column="1"  FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Statistiche generali -->
                <Border x:Name="GeneralStatsPanel" Visibility="Collapsed" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        
                        <TextBlock Text="Statistiche Generali" Style="{StaticResource PageTitle}" />
                        <TextBlock x:Name="GeneralStatsTextBlock" FontSize="14" Margin="0,0,0,8" />
                        <oxy:PlotView x:Name="GeneralStatsPieChart" Height="250" Margin="0,0,0,20" /> 
                        <oxy:PlotView x:Name="PunteggiPerCategoriaChart" Height="300" />
                    </StackPanel>
                </Border>

                <!-- Statistiche per categoria -->
                <Border x:Name="StatsPanel" Visibility="Collapsed" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Statistiche per categoria" Style="{StaticResource PageTitle}" />
                        <TextBlock Text="Seleziona una o più categorie per visualizzare le relative statistiche." Margin="0,0,0,8" />

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="SelectedCategoriesBox" IsReadOnly="True" Width="220" />
                            <Button Content="Scegli categorie" Width="120" Margin="8,0,0,0" Click="ChooseCategories_Click" />
                        </StackPanel>

                        <TextBlock x:Name="QuizUniciText" FontSize="14" Margin="0,0,0,2" />
                        <TextBlock x:Name="QuesitiTotaliText" FontSize="14" Margin="0,0,0,10" />

                        <oxy:PlotView x:Name="StatsPerCategoriaDifficoltaChart" Height="300" Margin="0,0,0,20" />
                        <oxy:PlotView x:Name="PercentualiTotaliPieChart" Height="300" Margin="0,0,0,20" />
                        <oxy:PlotView x:Name="StudentTimelineChart" Height="300" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
