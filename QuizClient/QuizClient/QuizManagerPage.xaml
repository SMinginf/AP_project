<Page x:Class="QuizClient.QuizManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utils="clr-namespace:QuizClient.Utils"
      Title="QuizManagerPage">

    <Page.Resources>
        <utils:CategoriaToStringConverter x:Key="CategoriaToStringConverter"/>
        <utils:OpCorrettaToStringConverter x:Key="OpCorrettaToStringConverter"/>
    </Page.Resources>

    <Grid Background="{StaticResource AppBackgroundBrush}" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Gestione Quiz"
                   Style="{StaticResource PageTitle}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Left">
            <TextBlock Text="Cerca testo:"
                       VerticalAlignment="Center"
                       Style="{StaticResource SectionTitle}"
                       Margin="0,0,10,0"/>
            <TextBox x:Name="SearchBox"
                     Width="250"
                     Height="30"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchBox_TextChanged"
                     ToolTip="Cerca parole chiave"/>
        </StackPanel>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <ListView x:Name="QuesitiListView"
                      BorderThickness="0"
                      Background="Transparent"
                      SelectionMode="Single"
                      MouseDoubleClick="QuesitiListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <!-- Colonna Checkbox -->
                        <GridViewColumn Header="✓" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Selezionato}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                        <GridViewColumn Header="Testo" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Testo}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="A" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OpzioneA}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="B" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OpzioneB}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="C" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OpzioneC}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="D" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OpzioneD}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Corretta" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OpCorretta, Converter={StaticResource OpCorrettaToStringConverter}}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Difficoltà" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Difficolta}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Categorie" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Categorie, Converter={StaticResource CategoriaToStringConverter}}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="⬅️ Indietro" Height="40" Width="80"
                    Click="Back_Click"/>
            <Button Content="Genera schede d'esame" Height="40" Width="160"
                    Click="GeneraEsame_Click"/>
            <Button Content="Sostituisci quesiti selezionati" Height="40" Width="190"
                    Click="Reroll_Click"/>
        </StackPanel>
    </Grid>
</Page>