<Window x:Class="QuizClient.ExamGenerationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inserisci valore" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="Quante copie differenti d'esame vuoi creare?" Margin="0,0,0,5"/>
        <TextBox x:Name = "CopieBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Click="Ok_Click"/>
            <Button Content="Annulla" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>