<Window x:Class="QuizClient.ExamGenerationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generazione Esame"
        MinHeight="200"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}">

    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="500">
            <StackPanel>

                <!-- Titolo finestra -->
                <TextBlock Text="Generazione esame"
                           Style="{StaticResource PageTitle}"
                           HorizontalAlignment="Center"/>

                <!-- Domanda -->
                <TextBlock Text="Quante copie differenti d'esame vuoi creare?"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,10,0,5"
                           FontSize="14"
                           TextWrapping="Wrap"/>

                <!-- Input -->
                <TextBox x:Name="CopieBox"
                         Height="30"
                         Margin="0,0,0,15"
                         FontSize="14"/>

                <!-- Pulsanti -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="OK"
                            Width="100"
                            Height="35"
                            Margin="0,0,10,0"
                            Click="Ok_Click"/>
                    <Button Content="Annulla"
                            Width="100"
                            Height="35"
                            Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
