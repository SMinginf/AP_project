<Window x:Class="QuizClient.QuestionDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestione Quesito"
        MinHeight="450"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}">

    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titolo -->
                <TextBlock Text="Quesito"
                           Style="{StaticResource PageTitle}"
                           Grid.Row="0"
                           Margin="0,0,0,15"/>

                <!-- Corpo -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Difficoltà -->
                    <TextBlock x:Name ="DifficoltaLabel" Text="Difficoltà:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               Grid.Row="0" Grid.Column="0"/>
                    <ComboBox x:Name="DifficoltaBox"
                              Grid.Row="0" Grid.Column="1"
                              Margin="0,2,0,10"
                              SelectedValuePath="Content">
                        <ComboBoxItem Content="Facile"/>
                        <ComboBoxItem Content="Intermedia"/>
                        <ComboBoxItem Content="Difficile"/>
                        <ComboBoxItem Content="Qualsiasi"/>
                    </ComboBox>

                    <!-- Testo del quesito -->
                    <TextBlock Text="Testo:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Top"
                               Margin="0,5,10,0"
                               Grid.Row="1" Grid.Column="0"/>
                    <TextBox x:Name="TestoBox"
                             Grid.Row="1" Grid.Column="1"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,2,0,10"
                             FontSize="14"/>

                    <!-- Opzioni -->
                    <WrapPanel x:Name="OpzioniWrapPanel"
                               Grid.Row="2" Grid.Column="1"
                               VerticalAlignment="Top"
                               Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                            <TextBlock Text="A:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="OpzioneABox" Width="120"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                            <TextBlock Text="B:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="OpzioneBBox" Width="120"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                            <TextBlock Text="C:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="OpzioneCBox" Width="120"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                            <TextBlock Text="D:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="OpzioneDBox" Width="120"/>
                        </StackPanel>
                        <StackPanel x:Name="CorrettaStackPanel" Orientation="Horizontal" Margin="0,0,8,0">
                            <TextBlock Text="Corretta:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="OpCorrettaBox" Width="100">
                                <ComboBoxItem Content="A"/>
                                <ComboBoxItem Content="B"/>
                                <ComboBoxItem Content="C"/>
                                <ComboBoxItem Content="D"/>
                            </ComboBox>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Categoria -->
                    <TextBlock x:Name ="CategoryLabel" Text="Categorie:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Grid.Row="3" Grid.Column="0"
                               Margin="0,0,10,0"/>
                    <DockPanel x:Name="CategoryDockPanel"
                               Grid.Row="3" Grid.Column="1"
                               LastChildFill="True">
                        <Button x:Name="ScegliButton"
                                Content="Scegli"
                                Width="100"
                                Height="30"
                                Margin="5,0,5,0"
                                Click="ApriSelezioneCategorie_Click"/>
                        <TextBox x:Name="CategoryBox"
                                 IsReadOnly="True"
                                 VerticalAlignment="Center"/>
                    </DockPanel>
                </Grid>

                <!-- Pulsanti -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Salva"
                            Width="100"
                            Height="35"
                            Margin="0,0,10,0"
                            Click="Salva_Click"/>
                    <Button Content="Annulla"
                            Width="100"
                            Height="35"
                            Click="Annulla_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
