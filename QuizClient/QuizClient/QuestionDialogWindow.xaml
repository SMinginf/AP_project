<Window x:Class="QuizClient.QuestionDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizClient"
        mc:Ignorable="d"
        Title="QuestionDialogWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Quesito" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Difficoltà -->
            <Label Content="Difficoltà:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="DifficoltaBox" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,2,0,2" 
                      SelectedValuePath="Content">
                <ComboBoxItem Content="Facile"/>
                <ComboBoxItem Content="Intermedia"/>
                <ComboBoxItem Content="Difficile"/>
                <ComboBoxItem Content="Qualsiasi"/>
            </ComboBox>

            <!-- Testo -->
            <Label Content="Testo:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,10,0"/>
            <TextBox x:Name="TestoBox" Grid.Row="2" Grid.Column="1"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Margin="0,2,0,2"/>

            <!-- Opzioni -->
            <WrapPanel Grid.Row="3" Grid.Column="1" VerticalAlignment="Top" Margin="0,0,0,2">
                <StackPanel Orientation="Horizontal" Margin="0,0,2,0">
                    <Label Content="A:" VerticalAlignment="Center"/>
                    <TextBox x:Name="OpzioneABox" Width="100" VerticalAlignment="Center" Margin="0,2,0,2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,2,0">
                    <Label Content="B:" VerticalAlignment="Center"/>
                    <TextBox x:Name="OpzioneBBox" Width="100" VerticalAlignment="Center" Margin="0,2,0,2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,2,0">
                    <Label Content="C:" VerticalAlignment="Center"/>
                    <TextBox x:Name="OpzioneCBox" Width="100" VerticalAlignment="Center" Margin="0,2,0,2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,2,0">
                    <Label Content="D:" VerticalAlignment="Center"/>
                    <TextBox x:Name="OpzioneDBox" Width="100" VerticalAlignment="Center" Margin="0,2,0,2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,2,0">
                    <Label Content="Corretta:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="OpCorrettaBox" Width="100" VerticalAlignment="Center" Margin="0,2,0,2">
                        <ComboBoxItem Content="A"/>
                        <ComboBoxItem Content="B"/>
                        <ComboBoxItem Content="C"/>
                        <ComboBoxItem Content="D"/>
                    </ComboBox>
                </StackPanel>
            </WrapPanel>

            <!-- Categorie -->
            <Label Content="Categorie:" Grid.Row="4" Grid.Column="0"/>
            <DockPanel Margin="0,0,0,4" Grid.Row="4" Grid.Column="1">
                <Button Content="Scegli" DockPanel.Dock="Right" Width="80" VerticalAlignment="Center" Margin="5,0,2,0" Click="ApriSelezioneCategorie_Click"/>
                <TextBox x:Name="CategoryBox" IsReadOnly="True" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
            </DockPanel>
        </Grid>

        <!-- Pulsanti -->
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Salva" Width="80" Margin="5,5,2,5" Click="Salva_Click" Height="35"/>
            <Button Content="Annulla" Width="80" Margin="5,5,2,5" Click="Annulla_Click" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
